#include <stdio.h>
#include <string.h>

float somar(int n1 , int n2){

    int resultado;
    resultado = n1 + n2;
    float media;
    media = resultado / 2;
    return media;

}






int main (){
    
 int n1;
 int n2;

 printf("Digite o primeiro numero: ");
 scanf("%d", &n1);
    
 printf("Digite o segundo numero: ");
 scanf("%d", &n2);
    
    
somar (n1, n2);    
    
    
printf("\nEXIBINDO DADOS\n");
printf("media: %f \n", somar (n1, n2));
    
    return 0;}
    
