#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main (){

int i;
char nome [5] [200];
char idade [5];

for ( i = 0; i < 5; i++)
{
    printf("\nDigite seu nome:");
    gets(nome[i]);

fflush(stdin);

    printf("Digite sua idade:");
    scanf("%d", &idade [i]);

fflush(stdin);

printf("cls");
}

for ( i = 0; i < 5; i++)
{
   printf("Nome: %s \n",  nome[i]); 
   printf("Idade: %d \n",  idade[i]); 
   printf("\n");
}

























return 0;    
}
