#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main (){

int numeros[6];
int i;
 
 for ( i = 0; i < 6; i++)
 {
   do
   {
 printf("Digite um valor: \n");
 scanf("%d",&numeros[i]);
      
   }
    while ((numeros[i] % 2 != 0) || (numeros [i] < 0));
   


 }
 

 for ( i = 5 ; i >= 0; i--)
 {
    printf("numeros: %d\n", numeros[i]);
 }
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
 
    return 0;
}
